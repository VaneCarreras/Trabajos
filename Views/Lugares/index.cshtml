
@{
    ViewData["Title"] = "Lugar";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<body class="body2">
<div class="text-center">
    <h1 class="display-4 letra">Lugar</h1>
</div>

<!-- Button trigger modal -->
<div class="mb-2">
  <button type="button" class="btn btn-secondary" onclick="NuevoRegistro()" data-bs-toggle="modal" data-bs-target="#ModalLugar">
    Nuevo Registro
  </button>
</div>

<table class="table table-dark table-borderedless table-striped table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th style="width: 70px"></th>
      <th style="width: 70px"></th>
    </tr>
  </thead>
  <tbody  id="tbody-lugares">
  </tbody>
</table>




<!-- Modal -->
<div class="modal fade" id="ModalLugar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-secondary">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title" id="ModalTitulo">Nuevo Lugar</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <input type="hidden" id="LugarID" value="0"/>
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" style="text-transform:uppercase" placeholder="Nombre del lugar">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="LimpiarModal()" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" onclick="GuardarRegistro()" class="btn btn-warning">Guardar</button>
      </div>
    </div>
  </div>
</div>






@section Scripts {
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

  <script src="~/js/lugar.js"></script>
}

</body>
