@{
    ViewData["Title"] = "Tipo de Ejercicio Físico";
}

<div class="text-center">
    <h1 class="display-4 letra">Tipo de Ejercicio Físico</h1>
</div>

<!-- Button trigger modal -->
<div class="mb-2">
  <button type="button" class="btn btn-primary" onclick="NuevoRegistro()" data-bs-toggle="modal" data-bs-target="#ModalTipoEjercFisico">
    Nuevo Registro
  </button>
</div>


<!-- Modal -->
<div class="modal fade" id="ModalTipoEjercFisico" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalTitulo"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <input type="hidden" id="TipoEjercFisicoID" value="0"/>
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre" style="text-transform:uppercase" placeholder="Nombre del tipo de ejercicio">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="LimpiarModal()" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" onclick="GuardarRegistro()" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>

<table class="table table-light table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th style="width: 70px"></th>
      <th style="width: 70px"></th>
    </tr>
  </thead>
  <tbody id="tbody-tipoejercicios">
  </tbody>
</table>

@section Scripts {
  <script src="~/js/tipoEjercFisico.js"></script>
}
